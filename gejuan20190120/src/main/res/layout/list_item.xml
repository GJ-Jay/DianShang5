<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="@dimen/image_dp"
        android:layout_height="@dimen/image_dp"
        android:background="@mipmap/ic_launcher"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/top20_dp"
        android:layout_height="@dimen/image_dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_dp"
            android:text="手机奥斯卡蝴蝶兰"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top10_dp"
            android:textColor="@android:color/holo_red_light"
            android:text="￥5799"/>

    </LinearLayout>
    
</LinearLayout>