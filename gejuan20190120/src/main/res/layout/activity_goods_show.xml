<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GoodsShowActivity"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/show_img"
            android:layout_width="@dimen/img_size"
            android:layout_height="@dimen/img_size"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/shar"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_width="@dimen/top20_dp"
            android:layout_height="@dimen/top20_dp"
            android:src="@drawable/vertical_left"/>

    </RelativeLayout>

    <com.youth.banner.Banner
        android:id="@+id/show_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        android:layout_marginTop="@dimen/top10_dp"></com.youth.banner.Banner>

    <TextView
        android:id="@+id/show_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top20_dp"
        android:text="收快递费"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/show_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top20_dp"
        android:text="￥5799.00"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_light"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="加入购物车"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"/>
    </RelativeLayout>
</LinearLayout>